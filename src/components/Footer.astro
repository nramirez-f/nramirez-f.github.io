---
import Logo from "../components/logo.astro";
import FooterIcon from "../icons/FooterIcon.astro";
import GithubIcon from "../icons/Github.astro";
import MailIcon from "../icons/Mail.astro";
import XIcon from "../icons/X.astro";
---

<section
  class="text-gray-700 bg-white border-t sm:mt-20 dark:bg-neutral-950 border-neutral-200 dark:border-neutral-800"
>
  <div
    class="container flex flex-col items-center py-8 mx-auto px-7 max-w-7xl sm:flex-row"
  >
    <Logo />
    <p
      class="mt-4 text-sm text-neutral-700 dark:text-neutral-100 sm:ml-4 sm:pl-4 sm:border-l sm:border-neutral-300 dark:sm:border-neutral-700 sm:mt-0"
    >
     original template by <a class="underline" href="https://github.com/ccbikai/astro-aria" target="_blank">ccbikai</a>  © {new Date().getFullYear()}
    </p>
    <span
      class="inline-flex justify-center mt-4 space-x-5 sm:ml-auto sm:mt-0 sm:justify-start"
    >
      <FooterIcon href="https://x.com/Fibo_dev" sr="𝕏">
        <XIcon class="w-6 h-6 dark:stroke-black stroke-white"></XIcon>
      </FooterIcon>
      <FooterIcon href="https://github.com/nramirez-f" sr="Github">
        <GithubIcon class="w-6 h-6"></GithubIcon>
      </FooterIcon>
      <FooterIcon href="mailto:fibodev27@gmail.com" sr="Mail">
        <MailIcon class="w-6 h-6"></MailIcon>
      </FooterIcon>
    </span>
  </div>
</section>
