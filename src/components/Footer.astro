---
import LinkedinIcon from "@icons/LinkedinIcon.astro";
import Logo from "../components/logo.astro";
import FooterIcon from "../icons/FooterIcon.astro";
import GithubIcon from "../icons/GithubIcon.astro";
import MailIcon from "../icons/MailIcon.astro";
---

<section
  class="text-gray-700 bg-white border-t sm:mt-20 dark:bg-neutral-950 border-neutral-200 dark:border-neutral-800"
>
  <div
    class="container flex flex-col items-center  py-8 mx-auto px-7 max-w-7xl sm:flex-col"
  >
    <Logo />
    <span
    class="inline-flex justify-center my-4 space-x-5 sm:my-4 sm:justify-center"
    >
    <FooterIcon href="https://github.com/nramirez-f" sr="Github">
      <GithubIcon class="w-6 h-6"></GithubIcon>
    </FooterIcon>
    <FooterIcon href="mailto:fibodev27@gmail.com" sr="Mail">
      <MailIcon class="w-6 h-6"></MailIcon>
    </FooterIcon>
    <FooterIcon href="https://es.linkedin.com/in/jos%C3%A9-ignacio-ram%C3%ADrez-fuentes-937a38251" sr="Linkedin">
      <LinkedinIcon class="w-6 h-6"></LinkedinIcon>
    </FooterIcon>
    </span>
    <p
      class="text-sm text-neutral-700 dark:text-neutral-100  sm:border-neutral-300 dark:sm:border-neutral-700"
    >
    original template by <a class="underline" href="https://github.com/ccbikai/astro-aria" target="_blank">ccbikai</a>
    </p>
  </div>
</section>
