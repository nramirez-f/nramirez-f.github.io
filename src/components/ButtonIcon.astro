---
const { link, text } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="flex items-center justify-center w-full max-w-xs px-4 py-2 mt-5 mx-2 text-xs font-semibold duration-300 ease-out border rounded-full bg-neutral-900 dark:bg-white dark:text-neutral-900 text-neutral-100 hover:border-neutral-700 border-neutral-900 dark:hover:border-neutral-300 hover:bg-white dark:hover:bg-black dark:hover:text-white hover:text-neutral-900"
>
  <slot class="h-5 w-5 flex-shrink-0 fill-current transition-colors duration-300" />
  <span class="ml-2 truncate leading-none text-center">{text}</span>
</a>

